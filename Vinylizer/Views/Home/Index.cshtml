@{ 
    var rPath = "/vinylizer";
}

<div class="row vi">
    <div class="col-md-8">
        <audio controls id="audio" style="width:88%">
            <source id="mp3_src" src="@rPath/Home/GetAudioFileForPlay?fileName=SCS034_15_OCCULT_CLASSIC.mp3" type="audio/mp3">
        </audio>
    </div>
</div>
<div class="row vi sliders">
    <div class="row">
        <div class="col-md-8">
            <div class="col-md-3">
                Dust (volume):
            </div>
            <div class="col-md-9">
                   <input id="ef1" class="effect_slider" type="text" /><span><span data-value-placeholder="ef1">0</span>%</span>
            </div>                
            </div>
            <div class="row">
                <div class="col-md-3">
                    Dust (frequency):
                </div>
                <div class="col-md-9">
                    <input id="ef1_f" class="effect_slider" type="text" /><span><span data-frequency-id="ef1_f">0</span>%</span>
                </div>
            </div>

            <hr/>

            <div class="row">
                <div class="col-md-3">
                    Crackle (volume):
                </div>
                <div class="col-md-9">
                    <input id="ef3" class="effect_slider" type="text" /><span><span data-value-placeholder="ef3">0</span>%</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    Crackle (frequency):
                </div>
                <div class="col-md-9">
                    <input id="ef3_f" class="effect_slider" type="text" /><span><span data-frequency-id="ef3_f">0</span>%</span>
                </div>
            </div>

            <hr />

            <div class="row">
                <div class="col-md-3">
                    Noise (volume):
                </div>
                <div class="col-md-9">
                    <input id="ef6" class="effect_slider" type="text" /><span><span data-value-placeholder="ef6">0</span>%</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    Noise (frequency):
                </div>
                <div class="col-md-9">
                    <input id="ef6_f" class="effect_slider" type="text" /><span><span data-frequency-id="ef6_f">0</span>%</span>
                </div>
            </div>

            <hr />

            <div class="row">
                <div class="col-md-3">
                    Scratches (volume):
                </div>
                <div class="col-md-9">
                    <input id="ef8" class="effect_slider" type="text" /><span><span data-value-placeholder="ef8">0</span>%</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    Scratches (frequency):
                </div>
                <div class="col-md-9">
                    <input id="ef8_f" class="effect_slider" type="text" /><span><span data-frequency-id="ef8_f">0</span>%</span>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12">
                    <input type="button" class="btn btn-info btn-block" name="Download" id="Download" style=" width 89%;" value="Download" onClick="downloadSound()" />
                </div>
            </div>
        </div>
    </div>
    <div style="display:none">
        <audio loop id="filter1" autoplay controls data-player="ef1">
            <source id="mp3_filter1_src" src="@rPath/Home/GetFilterForPlay?filterId=1" type="audio/mp3">
        </audio>
        <audio loop id="filter2" autoplay controls data-player="ef2">
            <source id="mp3_filter2_src" src="@rPath/Home/GetFilterForPlay?filterId=2" type="audio/mp3">
        </audio>
        <audio loop id="filter3" autoplay controls data-player="ef3">
            <source id="mp3_filter3_src" src="@rPath/Home/GetFilterForPlay?filterId=3" type="audio/mp3">
        </audio>
        <audio loop id="filter4" autoplay controls data-player="ef4">
            <source id="mp3_filter4_src" src="@rPath/Home/GetFilterForPlay?filterId=4" type="audio/mp3">
