        </audio>
        <audio loop id="filter6" autoplay controls data-player="ef6">
            <source id="mp3_filter6_src" src="@rPath/Home/GetFilterForPlay?filterId=6" type="audio/mp3">
        </audio>
        <audio loop id="filter7" autoplay controls data-player="ef7">
            <source id="mp3_filter7_src" src="@rPath/Home/GetFilterForPlay?filterId=7" type="audio/mp3">
        </audio>
        <audio loop id="filter8" autoplay controls data-player="ef8">
            <source id="mp3_filter8_src" src="@rPath/Home/GetFilterForPlay?filterId=8" type="audio/mp3">
