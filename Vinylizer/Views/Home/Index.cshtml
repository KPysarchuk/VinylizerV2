<div class="row">
    <div class="col-md-12">
        <input type="radio" id="trackName" name="trackName" value="beethoven.mp3"/> beethoven <br />
        <input type="radio" id="trackName" name="trackName" value="Mozart.mp3" checked/> Mozart<br />
        <input type="radio" id="trackName" name="trackName" value="Vivaldi.mp3" /> Vivaldi<br />
    </div>
    <div class="col-md-4">
        <audio controls id="audio">
            <source id="mp3_src" src="/vinylizer/Home/GetAudioFileForPlay?fileName=Mozart.mp3" type="audio/mp3">
        </audio>
    </div>
    <div class="col-md-2">
        <input type="button" class="btn btn-info" name="Download" id="Download" value="Download" onClick="downloadSound()" />
    </div>
</div>
